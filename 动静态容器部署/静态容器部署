apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: test010
  name: test010
  namespace: test
spec:
  replicas: 1
  selector:
    matchLabels:
      app: test010
  strategy:
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 25%
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: test010
    spec:
      containers:
      - env:
        - name: jenkinsURL
          value: "192.168.10.23"
        - name: Node
          value: "test010"
        - name: workDir
          value: "/root/jenkins"
        image: xxxxxx/version-jenkins:base20210512001
        imagePullPolicy: Always
        name: jnlp
        resources:
          requests:
            cpu: 2
            memory: 8Gi
        securityContext:
          privileged: true
        terminationMessagePath: /dev/termination-log
        terminationMessagePolicy: File
        volumeMounts:
        - mountPath: /root/jenkins
          name: workspace
        - mountPath: /root/check
          name: codingcheck
        - mountPath: /root/tools
          name: tools
      dnsPolicy: ClusterFirst
      imagePullSecrets:
      - name: hissecret
      nodeSelector:
        cleancode_version: "true"
      restartPolicy: Always
      schedulerName: default-scheduler
      terminationGracePeriodSeconds: 30
      volumes:
      - hostPath:
          path: /data/test
          type: ""
        name: workspace
      - name: codingcheck
        nfs:
          path: /data/test
          server: 云环境地址
      - name: tools
        nfs:
          path: /data/tools
          server: 云环境地址
